<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?backgroundLayoutColorRegistration"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_add_bank_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="6">

        <com.zesium.android.betting.ui.widgets.SFFontTextView
            android:id="@+id/tv_add_bank_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="?textViewRegistrationBackgroundColor"
            android:padding="16dp"
            tools:text="Pleas add it" />

        <Button
            android:id="@+id/btn_add_bank_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="2"
            android:background="@drawable/rounded_group_type"
            android:enabled="false"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:text="Add bank data" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_upload_government_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="6">

        <com.zesium.android.betting.ui.widgets.SFFontTextView
            android:id="@+id/tv_upload_government_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="?textViewRegistrationBackgroundColor"
            android:padding="16dp"
            tools:text="Upload government ID" />

        <Button
            android:id="@+id/btn_upload_government_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="2"
            android:background="@drawable/rounded_group_type"
            android:enabled="false"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:text="Upload ID" />

    </LinearLayout>

</LinearLayout>


