<?xml version=
    "1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/credentials_circle_background"/>

            <stroke android:width="1dp" android:color="@color/credentials_circle_background"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/sports_betting_line"/>
            <stroke android:width="1.5dp" android:color="@android:color/white"/>
        </shape>
    </item>

</selector>